{
  "extends": "@rubiin/tsconfig",
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@libs/*": [
        "./libs/*"
      ],
      "@common/*": [
        "./common/*"
      ],
      "@modules/*": [
        "./modules/*"
      ],
      "@entities": [
        "./entities"
      ],
      "@mocks": [
        "./_mocks_"
      ],
      "@generated": [
        "./generated"
      ],
    },
    "moduleResolution": "NodeNext",
    "declaration": true,
    "outDir": "dist",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
  },
  "include": [
    "test/**/*",
    "src/**/*",
    "eslint.config.js"
  ],
  "typeRoots": ["./src/common/@types/typings"]
}
